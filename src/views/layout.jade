doctype html
html
  head
    meta(charset='utf-8')
    title= title
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container
      .row
        div(class='six columns')
          h1 Template
        div(class=['six columns', 'signin'])
          if user
            span
              img(src='http://www.gravatar.com/avatar/#{user.gravatarhash}?s=32')
            span= ' Hello ' + user.firstname
              a(class='button', href='/signout') Log out
          else
            a(class='button', href='/signin') Sign in
      .row
        div(class='twelve columns')
          ul(class='navbar-list')
            li(class='navbar-item')
              a(class='navbar-link', href='/') Home
            li(class='navbar-item')
              a(class='navbar-link', href='/myprofile') My Profile
      block content
    block scripts
